{
  "include": ["src"], // 컴파일 범위 (주로 폴더) 지정)
  "compilerOptions": {  // 상세 옵션을 위한 항목들
    "target": "ESNext",  // 컴파일 결과로 생성될 자바스크립트의 버전 설정  
    "module": "CommonJS",   // 모듈 시스템 설정
    "outDir": "dist",   // 컴파일 결과로 생성될 자바스크립트 파일 위치
    "strict": false,    // 컴파일 시 타입 검사의 엄격함 정도
    "moduleDetection": "force"   // 스코프 분리 여부
  }
}